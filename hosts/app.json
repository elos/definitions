{
    "name": "app",
    "host": "app.elos.io",

    "endpoints": [
        {
            "name": "landing",
            "path": "/",
            "actions": ["GET"],
            "auth": "none"
        },
        {
            "name": "sessions",
            "path": "/sessions",
            "actions": ["GET"],
            "auth": "none",
            "endpoints": [
                {
                    "name": "sign_in",
                    "path": "/sign_in",
                    "actions": ["GET", "POST"],
                    "auth": "none",
                    "requires": ["db", "sessions"]
                },
                {
                    "name": "register",
                    "path": "/register",
                    "actions": ["GET", "POST"],
                    "auth": "none",
                    "requires": ["db"]
                }
            ]
        },
        {
            "name": "user",
            "path": "/user",
            "actions": ["GET"],
            "auth": "user",
            "endpoints": [
                {
                    "name": "interactive",
                    "path": "/interactive",
                    "actions": ["GET"],
                    "requires": ["db"]
                },
                {
                    "name": "repl",
                    "path": "/repl",
                    "actions": ["GET"],
                    "requires": ["db", "agents"]
                },
                {
                    "name": "calendar",
                    "path": "/calendar",
                    "actions": ["GET"],
                    "requires": ["db"]
                },
                {
                    "name": "events",
                    "path": "/events",
                    "actions": ["GET"],
                    "requires": ["db"]
                },
                {
                    "name": "tasks",
                    "path": "/tasks",
                    "actions": ["GET"],
                    "requires": ["db"]
                },
                {
                    "name": "routines",
                    "path": "/routines",
                    "actions": ["GET"],
                    "requires": ["db"]
                },
                {
                    "name": "schedules",
                    "path": "/schedules",
                    "actions": ["GET"],
                    "requires": ["db"],
                    "endpoints": [
                        {
                            "name": "base",
                            "path": "/base",
                            "actions": ["GET"],
                            "requires": ["db"],
                            "endpoints": [
                                {
                                    "name": "fixtures",
                                    "path": "/fixtures/:fixture_id",
                                    "actions": ["GET", "POST", "DELETE"],
                                    "requires": ["db"],
                                    "endpoints":[
                                        {
                                            "name": "create",
                                            "path": "/create",
                                            "actions": ["GET"],
                                            "requires": ["db"]
                                        },
                                        {
                                            "name": "edit",
                                            "path": "/edit",
                                            "actions": ["GET"],
                                            "requires": ["db"]
                                        },
                                        {
                                            "name": "delete",
                                            "path": "/delete",
                                            "actions": ["GET"],
                                            "requires": ["db"]
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "name": "weekly",
                            "path": "/weekly",
                            "actions": ["GET"],
                            "requires": ["db"],
                            "endpoints": [
                                {
                                    "name": "weekday",
                                    "path": "/:weekday",
                                    "actions": ["GET"],
                                    "requires": ["db"]
                                }
                            ]
                        },
                        {
                            "name": "yearly",
                            "path": "/yearly",
                            "actions": ["GET"],
                            "requires": ["db"],
                            "endpoints": [
                                {
                                    "name": "yearday",
                                    "path": "/:yearday",
                                    "actions": ["GET"],
                                    "requires": ["db"]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}

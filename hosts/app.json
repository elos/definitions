{
    "name": "app",
    "host": "app.elos.io",
    "port": 8000,

    "middleware": [
        "user-auth"
    ],

    "services": [
        "agents",
        "db",
        "sessions"
    ],

    "endpoints": [
        {
            "name": "landing",
            "path": "/",
            "actions": ["GET"]
        },
        {
            "name": "sessions",
            "path": "/sessions",
            "actions": ["GET"],
            "subpoints": [
                {
                    "name": "sign_in",
                    "path": "/sign_in",
                    "actions": ["GET", "POST"],
                    "services": {
                        "GET": ["db", "sessions"],
                        "POST": ["db", "sessions"]
                    }
                },
                {
                    "name": "register",
                    "path": "/register",
                    "actions": ["GET", "POST"],
                    "services": {
                        "GET": ["db"],
                        "POST": ["db"]
                    }
                }
            ]
        },
        {
            "name": "user",
            "path": "/user",
            "actions": ["GET"],
            "middleware": {
                "GET": ["user-auth"]
            },
            "subpoints": [
                {
                    "name": "interactive",
                    "path": "/interactive",
                    "actions": ["GET"],
                    "services": {
                        "GET": ["db"]
                    }
                },
                {
                    "name": "repl",
                    "path": "/repl",
                    "actions": ["GET"],
                    "services": {
                        "GET": ["db", "agents"]
                    }
                },
                {
                    "name": "calendar",
                    "path": "/calendar",
                    "actions": ["GET"],
                    "services": {
                        "GET": ["db"]
                    }
                },
                {
                    "name": "events",
                    "path": "/events",
                    "actions": ["GET"],
                    "services": {
                        "GET": ["db"]
                    }
                },
                {
                    "name": "tasks",
                    "path": "/tasks",
                    "actions": ["GET"],
                    "services": {
                        "GET": ["db"]
                    }
                },
                {
                    "name": "routines",
                    "path": "/routines",
                    "actions": ["GET"],
                    "services": {
                        "GET": ["db"]
                    }
                },
                {
                    "name": "schedules",
                    "path": "/schedules",
                    "actions": ["GET"],
                    "services": {
                        "GET": ["db"]
                    },
                    "subpoints": [
                        {
                            "name": "base",
                            "path": "/base",
                            "actions": ["GET"],
                            "services": {
                                "GET": ["db"]
                            },
                            "subpoints": [
                                {
                                    "name": "fixtures",
                                    "path": "/fixtures/:fixture_id",
                                    "actions": ["GET", "POST", "DELETE"],
                                    "services": {
                                        "GET": ["db"],
                                        "POST": ["db"],
                                        "DELETE": ["db"]
                                    },
                                    "subpoints":[
                                        {
                                            "name": "create",
                                            "path": "/create",
                                            "actions": ["GET"],
                                            "services": {
                                                "GET": ["db"]
                                            }
                                        },
                                        {
                                            "name": "edit",
                                            "path": "/edit",
                                            "actions": ["GET"],
                                            "services": {
                                                "GET": ["db"]
                                            }
                                        },
                                        {
                                            "name": "delete",
                                            "path": "/delete",
                                            "actions": ["GET"],
                                            "services": {
                                                "GET": ["db"]
                                            }
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "name": "weekly",
                            "path": "/weekly",
                            "actions": ["GET"],
                            "services": {
                                "GET": ["db"]
                            },
                            "subpoints": [
                                {
                                    "name": "weekday",
                                    "path": "/:weekday",
                                    "actions": ["GET"],
                                    "services": {
                                        "GET": ["db"]
                                    }
                                }
                            ]
                        },
                        {
                            "name": "yearly",
                            "path": "/yearly",
                            "actions": ["GET"],
                            "services": {
                                "GET": ["db"]
                            },
                            "subpoints": [
                                {
                                    "name": "yearday",
                                    "path": "/:yearday",
                                    "actions": ["GET"],
                                    "services": {
                                        "GET": ["db"]
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
